{
  "name": "px",
  "scopeName": "source.px",
  "fileTypes": ["px"],
	"patterns": [{
      "name": "keyword.px",
      "match": "\\b(void|bool|i32|u32|i64|u64|f32|f64|str|if|match|break|continue|pass|goto|suspend|loop|for|null|true|false)\\b"
    }, {
      "include": "#comments"
    }, {
			"include": "#strings"
    }, {
			"include": "#keywords"
    }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.storage.px",
				"match": "\\b(unit|let|mut|fun|type|unittest)\\b"
      }, {
        "name": "keyword.type.px",
				"match": "\\b(shared|unique|unsafe)\\b"
      }, {
        "name": "keyword.structure.px",
				"match": "\\b(scope|enum|class|trait|annot|coroutine|contract)\\b"
      }, {
        "name": "keyword.conditional.px",
				"match": "\\b(@|extern|lateinit)\\b"
      }]
    },
    "comments": {
      "patterns":[{
          "name": "comment.line.documentation.px",
          "begin": "#[!/](?=[^/])",
          "end": "$"
        }, {
          "name": "comment.line.double-slash.px",
          "begin": "#",
          "end": "$"
        }, {
          "name": "comment.block.px",
          "begin": "#/",
          "end": "/#"
        }
      ]
    },
		"strings": {
			"name": "string.quoted.double.px",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
					"name": "constant.character.escape.px",
					"match": "\\\\."
				}
			]
    }
  }
}