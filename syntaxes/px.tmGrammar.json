{
  "name": "px",
  "scopeName": "source.px",
  "fileTypes": ["px"],
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.decl.px",
				"match": "\\b(unit, let, mut, fun, type, unittest)\\b"
      }, {
        "name": "keyword.primitive.px",
				"match": "\\b(void, bool, i32, u32, i64, u64, f32, f64, str)\\b"
      }, {
        "name": "keyword.reference.px",
				"match": "\\b(shared, unique, unsafe)\\b"
      }, {
        "name": "keyword.scope.px",
				"match": "\\b(scope, enum, class, trait, annot, coroutine, contract)\\b"
      }, {
        "name": "keyword.annotation.px",
				"match": "\\b(@extern)\\b"
      }]
    },
    "comments": {
      "patterns":[
        {
          "name": "comment.line.documentation.px",
          "begin": "#[!/](?=[^/])",
          "end": "$"
        },
        {
          "name": "comment.line.single-sharp.px",
          "begin": "#",
          "end": "$"
        }
      ]
    },
		"strings": {
			"name": "string.quoted.double.px",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.px",
					"match": "\\\\."
				}
			]
    }
  },
  "todo-keyword": {
    "match": "TODO",
    "name": "keyword.todo"
  }
}